<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="default">
        <job name="abandoned_cart" instance="Ntz\AbandonedCart\Model\Cron\Save" method="abandonedCartsSave">
            <schedule>* * * * *</schedule>
        </job>

        <job name="abandoned_cart_send" instance="Ntz\AbandonedCart\Model\Cron\Send" method="execute">
            <schedule>* * * * *</schedule>
        </job>
    </group>
</config>
